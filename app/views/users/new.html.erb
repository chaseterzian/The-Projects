<div class="container">
  <div class="page-header">

    <h1>New User</h1>
    <hr>

    <%= form_for @user, html: { class: "form-horizontal" } do |f| %>

    <div class="form-group">
      <%= f.label "First Name", class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :first_name  , class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Last Name", class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :last_name  , class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Email", class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-3">
        <%= f.submit "Create User", class: "btn btn-primary" %>
        <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
      </div>
    </div>

    <% end %>

  </div>
</div>
