<h1> <%= header %> </h1>
<hr>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, @project %></li>
  <li><%= link_to "Tasks", project_tasks_path(@project) %></li>
  <li class="active"><%= "New Task" %></li>
</ol>

<%= render partial: "shared/errors", locals:{shared_errors: @task} %>

<%= form_for [@project, @task], html: { class: "form-horizontal" } do |f| %>

<div class="form-group">
  <%= f.label :description, "Description", class: "col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :due_date, "Due Date", class: "col-md-2 control-label" %>
  <div class="col-md-3">
    <%= f.date_field :due_date, class: "form-control" %>
  </div>
</div>

<% if @task_edit_for_partial %>
<div class ="form-group">
  <div class ="col-sm-offset-2 col-sm-10">
    <%= f.check_box :complete %>
    <%= f.label :complete %>
  </div>
</div>
<% end %>

<div class="form-group">
  <div class="col-md-offset-2 col-md-3">
    <%= f.submit name_of_button, class: "btn btn-primary" %>
    <%= link_to "Cancel", project_tasks_path(@project), class: "btn btn-default" %>
  </div>
</div>

<% end %>
