<div class="container">
  <div class="page-header">

    <h1>New Task</h1>
    <hr>
    <%= form_for @task, html: { class: "form-horizontal" } do |f| %>

    <ol class="breadcrumb">
      <li><a><%= link_to "Tasks", tasks_path %></a></li>
      <li class="active"><%= "New Task" %></li>
    </ol>


    <div class="form-group">
      <%= f.label :description, class: "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duedate, class: "col-md-2 control-label" %>
      <div class="col-md-3">
        <%= f.date_field :duedate, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-md-offset-2 col-md-3">
        <%= f.submit "Create task", class: "btn btn-primary" %>
        <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
      </div>
    </div>

    <% end %>

  </div>
</div>
