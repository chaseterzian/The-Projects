<div class="container">
  <div class="page-header">

    <%= link_to "New Project", new_project_path, class: "btn btn-info pull-right" %>
    <h1>Projects</h1>
    <hr>

    <table class="table">
      <thead>
        <tr>
          <th class="col-md-3">Name</th>
          <th class="col-md-8">Tasks</th>
          <th class="col-md-1"></th>
        </tr>
      </thead>

      <% @projects.each do |project| %>
      <tr>
        <td class="col-md-6">
          <%= link_to "#{project.name}", project_path(project) %>
        </td>

        <td class="col-md-5">
          <%= link_to project.tasks.count, project_tasks_path(project) %>
        </td>

        <td class="col-md-1">
        </td>
      </tr>
      <% end %>
    </table>


    <h1>Pivital Tracker Projects</h1>
    <hr>
    <table class="table">
      <thead>
        <tr>
          <th class="col-md-3">Name</th>
          <th class="col-md-8"></th>
          <th class="col-md-1"></th>
        </tr>
      </thead>

      <% if current_user.pivitol_tracker_token != nil %>
      <% @tracker_projects.each do |project| %>
      <tr>
        <td class="col-md-6">
          <%= link_to project[:name], tracker_stories_path(project) %>
        </td>

        <td class="col-md-5">
        </td>

        <td class="col-md-1">
        </td>
      </tr>
      <% end %>
      <% end %>

    </table>
  </div>
</div>
